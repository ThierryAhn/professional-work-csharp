<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>

    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/skitter.styles.css")" rel="stylesheet" type="text/css" />
    
    <script src="@Url.Content("~/Scripts/jquery-1.7.1.min.js")" type="text/javascript"></script>
   
    <script src="@Url.Content("~/Scripts/jquery.easing.1.3.js")" type="text/javascript" ></script>
    <script src="@Url.Content("~/Scripts/jquery.skitter.min.js")" type="text/javascript" ></script>



    <!-- Init Skitter -->
	<script type="text/javascript">
	    $(document).ready(function () {
	        $('.box_skitter_large').skitter({
	            with_animations: ['paralell', 'glassCube', 'swapBars', 'circles', 'circlesInside', 'circlesRotate'],
	            theme: 'clean',
	            numbers_align: 'center',
	            progressbar: false,
	            dots: true,
	            preview: true,
	            labelAnimation: 'left',
	            hideTools: true
	        });
	    });
	</script>

</head>
<body>
    <div class="page">
        <div id="header">
            
            <div id="title">
                <img src="@Url.Content("~/Content/images/logo.jpg")" alt="KSA Evenementiel" />
            </div>

            <div id="logindisplay">
                @* @Html.Partial("_LogOnPartial") *@
            </div>

            <div id="menucontainer">
                <ul id="menu">
                    <li>@Html.ActionLink("ACCUEIL", "Index", "Home")</li>
                    <li>@Html.ActionLink("A PROPOS", "About", "Home")</li>
                    
                    <!-- Production -->
                    <li>
                        <a href="#">
                            PRODUCTION
                            <span class="arrow">&nbsp;</span>
                        </a>
                        <ul>
                            <li>@Html.ActionLink("PRODUCTION ARTISTIQUE", "Artistique", "Production")</li>
                            <li>@Html.ActionLink("SOUTIEN AUX ARTISTES", "Soutien", "Production")</li>
                            <li>@Html.ActionLink("FORMATION", "FORMATION", "Production")</li>
                        </ul>
                    </li>
                    
                    <!-- Parc -->
                    <li>
                        <a href="#">
                            PARC
                            <span class="arrow">&nbsp;</span>
                        </a>
                        <ul>
                            <li>@Html.ActionLink("AUDIO", "Audio", "Parc")</li>
                            <li>@Html.ActionLink("LUMIÈRE SCÉNIQUE | VIDÉO", "Video", "Parc")</li>
                            <li>@Html.ActionLink("BACKLINE", "Backline", "Parc")</li>
                            <li>@Html.ActionLink("STRUCTURE DE SCÈNE", "Scene", "Parc")</li>
                            <li>@Html.ActionLink("SALLES", "Salle", "Parc")</li>
                        </ul>
                    </li>

                    <!-- Services -->
                    <li>
                        <a href="#">
                            SERVICES
                            <span class="arrow">&nbsp;</span>
                        </a>
                        <ul>
                            <li>@Html.ActionLink("EVÈNEMENTS CLÉS EN MAIN", "Evenement", "Service")</li>
                            <li>@Html.ActionLink("BUREAU D'ÉTUDE | INSTALLATION", "Bureau", "Service")</li>
                            <li>@Html.ActionLink("BILLETTERIE", "Billetterie", "Service")</li>
                            <li>@Html.ActionLink("LA VENTE", "Vente", "Service")</li>
                            <li>@Html.ActionLink("LOCATION DE MATÉRIEL", "Materiel", "Service")</li>
                            <li>@Html.ActionLink("LOCATION DE SALLE", "Salle", "Service")</li>
                        </ul>
                    </li>

                    <li>@Html.ActionLink("CONTACT", "Contact", "Home")</li>

                </ul>
            </div>
        </div>

        <div class="clear">&nbsp;</div>

        <div id="main">
            @RenderBody()
        </div>

        <div class="clear">&nbsp;</div>

        <div id="footer">

            <div id="footercontainer">
				<!-- Navigation -->
				<div id="footer-navigation">
					<ul>
                        <li>&copy; 2014</li>
						<li>@Html.ActionLink("ACCUEIL", "Index", "Home")</li>
                        <li>@Html.ActionLink("A PROPOS", "About", "Home")</li>
						<li>@Html.ActionLink("CONTACT", "Contact", "Home")</li>
					</ul>
				</div>
				<!-- /Navigation -->
				
                <div id="footer-see-logo">
                    <img src="@Url.Content("~/Content/images/see-logo-2.png")" alt="see-logo" />
                </div>
                	
				<!-- Copyrights -->
				<div id="footer-copyright">
					<p>K-MASTER Conception, R&eacute;alisation Marco AHOUNOU</p>
				</div>
				<!-- /Copyrights -->
							
				@*<div class="clear">&nbsp;</div>*@
			</div>
        </div>
    </div>
</body>
</html>
